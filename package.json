{
  "name": "@dkshs/changelog-github",
  "version": "0.0.6",
  "description": "A changelog entry generator for changeset on GitHub with links to commits, PRs and optionally users.",
  "repository": {
    "type": "git",
    "url": "https://github.com/dkshs/changelog-github.git"
  },
  "license": "MIT",
  "author": {
    "name": "DKSHS",
    "url": "https://github.com/dkshs"
  },
  "type": "commonjs",
  "exports": "./dist/index.js",
  "main": "./dist/index.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "check": "pnpm lint && pnpm typecheck && pnpm test",
    "lint": "eslint . && prettier . -c",
    "lint:fix": "eslint --fix . && prettier . -w",
    "test": "vitest",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@changesets/get-github-info": "^0.5.2",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "@changesets/parse": "^0.3.16",
    "@changesets/types": "^5.2.1",
    "@dkshs/eslint-config": "^1.3.5",
    "@types/node": "^20.8.10",
    "eslint": "^8.53.0",
    "tsup": "^7.2.0",
    "typescript": "^5.2.2",
    "vitest": "^0.34.6"
  },
  "publishConfig": {
    "access": "public"
  }
}
